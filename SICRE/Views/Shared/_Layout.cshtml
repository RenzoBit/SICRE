<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title - My ASP.NET MVC Application</title>
	<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
	<meta name="viewport" content="width=device-width" />
	@Styles.Render("~/Content/css")
	@Styles.Render("~/Content/rv.css")
	@Styles.Render("~/Content/jqsimplemenu.css")
	@Styles.Render("~/Content/themes/base/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<header>
		<div class="content-wrapper">
			<div class="float-left">
				<p class="site-title">@Html.ActionLink("SICRE", "Index", "Home")</p>
			</div>
			<div class="float-right">
				<section id="login">
					@Html.Partial("_LoginPartial")
				</section>
				<nav>
					<ul class="jq-menu">
						<li>@Html.ActionLink("Inicio", "Index", "Home")</li>
						<li><a href="#">Crédito</a>
							<ul>
								<li>@Html.ActionLink("Solicitud de L.C.", "Index", "Solicitud")</li>
								<li>@Html.ActionLink("Asignar analista", "IndexAnalista", "Solicitud")</li>
								<li>@Html.ActionLink("Perfil crediticio", "Index", "Crediticio")</li>
								<li>@Html.ActionLink("Asignar L.C. dentro de aut.", "IndexDentro", "Solicitud")</li>
								<li>@Html.ActionLink("Asignar L.C. superior a aut.", "IndexSuperior", "Solicitud")</li>
							</ul>
						</li>
					</ul>
				</nav>
			</div>
		</div>
	</header>
	<div id="body">
		@RenderSection("featured", required: false)
		<section class="content-wrapper main-content clear-fix">
			@RenderBody()
		</section>
	</div>
	<footer>
		<div class="content-wrapper">
			<div class="float-left">
				<p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
			</div>
		</div>
	</footer>

	@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jqsimplemenu.js")
	@Scripts.Render("~/Scripts/jquery.center.js")
	<script type="text/javascript">
$(function () {
	$('.jq-menu').jqsimplemenu();
	@if (null != TempData["alerta"]) {
		@Html.Raw("alert('" + @TempData["alerta"] + "');")
	}
	@if (null != TempData["confirma"]) {
		@Html.Raw("if (confirm('" + @TempData["confirma"].ToString().Split('|')[0] + "')) { " + @TempData["confirma"].ToString().Split('|')[1] + " }")
	}
});
	</script>
	@RenderSection("scripts", required: false)
</body>
</html>
